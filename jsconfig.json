{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@public/*": ["public/*"],
      "@api/*": ["src/api/*"],
      "@components/*": ["src/components/*"],
      "@components": ["src/components/"],
      "@constants/*": ["src/constants/*"],
      "@modules/*": ["src/modules/*"],
      "@pages/*": ["src/pages/*"],
      "@store/*": ["src/store/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"]
    }
  },
  "include": ["src/**/*.d.ts", "src/**/*.d.tsx", "src/**/*.js", "src/**/*.jsx"],
  "exclude": ["node_modules", "**/node_modules", "dist"]
}
